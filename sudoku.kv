#:kivy 1.11.1

<Widget>:
    font_name: "Caveat-VariableFont_wght"
<Button>
    font_size: 40
<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 100
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: 'Sudoku'
            font_size: 70

            bold: True
            color: (0, 1, 0.5, 1)
        Button:
            text: '\u00daj j\u00e1t\u00e9k'
            font_size: 40
            on_press: root.new_game()
        Button:
            text: 'Rekordok'
            on_press: root.scoreboard()
        Button:
            text: 'Szab\u00e1lyok'
            on_press: root.rules()
        Button:
            text: 'Kil\u00e9p\u00e9s'
            on_press: root.exit_game()
<GameScreen>:
    on_enter: root.create_cells()
    grid: Grid
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        GridLayout:
            id: Grid
            cols: 9
            rows: 9
            width: 599
            height: 599
            col_default_width: 65.5
            col_force_default: True
            padding: 100, 0, 0, 0
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.15, 0.25
            Button:
                text: '\u00dajrakezd\u00e9s'
                size_hint: 1, 0.33
                font_size: 20
                on_press: root.reset()
            Button:
                text: '\u00daj j\u00e1t\u00e9k'
                size_hint: 1, 0.33
                font_size: 20
                on_press: root.new_game()
            Button:
                text: 'Men\u00fc'
                size_hint: 1, 0.33
                font_size: 20
                on_press: root.back()
<ScoreboardScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: 100

    Button:
        text: 'Vissza'
        on_press: root.back()
<RulesScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: 100

        Label:
            text: 'Szab\u00e1lyok'
            font_size: 70
            color: (0, 0, 0, 1)
        Label:
            text: 'A j\u00e1t\u00e9k c\u00e9lja a sz\u00e1mjegyek (1-9) be\u00edr\u00e1sa a 9x9 t\u00e1bl\u00e1zat cell\u00e1iba \n\u00fagy, hogy minden sorban \u00e9s oszlopban, valamint a kisebb,\n3x3-as n\u00e9gyzetekben is az \u00f6sszes sz\u00e1m pontosan egyszer szerepeljen.'
            font_size: 28
            color: (0, 0, 0, 1)
        Button:
            text: 'Vissza'
            font_size: 40
            on_press: root.back()
<SudokuCell>:
    bold: True
    color: 0, 0, 0, 1
    font_size: 20
    font_name: 'Roboto'
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height

