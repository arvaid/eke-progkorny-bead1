#:kivy 1.11.1

<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 100

        Label:
            text: 'Sudoku'
            font_size: 70
            font_name: "Caveat-VariableFont_wght"
            bold: True
            color: (0, 1, 0.5, 1)
        Button:
            text: '\u00daj j\u00e1t\u00e9k'
            font_size: 40
            font_name: 'Caveat-VariableFont_wght'
            on_press: root.new_game()
        Button:
            text: 'Rekordok'
            font_size: 40
            font_name: 'Caveat-VariableFont_wght'
            on_press: root.scoreboard()
        Button:
            text: 'Szab\u00e1lyok'
            font_size: 40
            font_name: 'Caveat-VariableFont_wght'
            on_press: root.rules()
        Button:
            text: 'Kil\u00e9p\u00e9s'
            font_size: 40
            font_name: 'Caveat-VariableFont_wght'
            on_press: root.exit_game()
<GameScreen>:
    on_enter: root.create_cells()
    cells: Cells

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            id: Cells
            orientation: 'vertical'
        BoxLayout:
            Button:
                text: 'Vissza'
                on_press: root.back()
<ScoreboardScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 100

    Button:
        text: 'Vissza'
        on_press: root.back()
<RulesScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 100

        Label:
            text: 'Szab\u00e1lyok'
            font_size: 70
            font_name: 'Caveat-VariableFont_wght'
        Label:
            text: 'A j\u00e1t\u00e9k c\u00e9lja a sz\u00e1mjegyek (1-9) be\u00edr\u00e1sa a 9x9 t\u00e1bl\u00e1zat cell\u00e1iba \n\u00fagy, hogy minden sorban \u00e9s oszlopban, valamint a kisebb,\n3x3-as n\u00e9gyzetekben is az \u00f6sszes sz\u00e1m pontosan egyszer szerepeljen.'
            font_size: 28
            font_name: 'Caveat-VariableFont_wght'
        Button:
            text: 'Vissza'
            font_size: 40
            font_name: 'Caveat-VariableFont_wght'
            on_press: root.back()